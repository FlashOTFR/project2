<section id="characters" class="container">
  <h1 class="center">All Characters</h1>

  {{#each characters}}
  <div class="row">
    <div class="col s12 m12">
      <div class="card light-blue">
        <div class="card-content white-text">
          <span class="card-title center">{{this.name}}</span>
          <p>Class: {{this.class}} <br/>Level: {{this.level}} <br/> Current HP: {{current_hp}}</p>
        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn-small left">More Infos </a>
          <button class="waves-effect waves-light btn-small right delBtn" data-id="{{this.id}}">Delete Character</button>
        </div>
      </div>
    </div>
    {{else}}
    <p>No characters available</p>
    {{/each}}

</section>